
{% block head %}
{% include "_base.twig" %}
{% endblock %}

{% block body %}
    {% include "partials/nav.twig" %}
    <div class="container">
        <h1>{{ page_h1 }}</h1>
        <h5>{{ base_uri }} {{ baseurl }}</h5>

        <p>{{ content | raw }}</p>
        <div class="card">
        <div class="card-body">
            <form id="form-redeem" name="form-redeem" action="campaign/create" method="post">
                <div class="form-group row">
                    <label for="Name" class="col-sm-2 col-form-label">Title *</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="title" name="title" placeholder="Campaign Title" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Quantity" class="col-sm-2 col-form-label">Quantity *</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="quantity" name="quantity" required placeholder="Numerical Values only, eg 1000">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Prefix" class="col-sm-2 col-form-label">Prefix</label>
                    <div class="col-sm-3">
                        <input type="text"  class="form-control" id="prefix" name="prefix" placeholder="">
                    </div>

                    <label for="Sufix" class="col-sm-2 col-form-label">Sufix</label>
                    <div class="col-sm-3">
                        <input type="text"  class="form-control" id="sufix" name="sufix" placeholder="">
                    </div>

                </div>
                <div class="form-group row">
                    <label for="Rate" class="col-sm-2 col-form-label">Rate (Tsh) *</label>
                    <div class="col-sm-3">
                        <input type="text" required class="form-control" id="rate" name="rate" placeholder="1500">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="created_date" class="col-sm-2 col-form-label">Date time</label>

                    <div class="col-sm-10">
                        <input type="text"  readonly class="form-control" id="created_date" name="created_date" value="{{ now }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="expiry" class="col-sm-2 col-form-label">Expire Date *</label>

                    <div class="col-sm-10">
                        <select name="expiry" class="custom-select custom-select-lg" required>
                            <option selected value="">select period</option>
                            <option value="1 week">1 week</option>
                            <option value="2 weeks">2 weeks</option>
                            <option value="1 month">1 month</option>
                            <option value="3 months">3 months</option>
                            <option value="6 months">6 months</option>
                            <option value="1 year">1 year</option>
                        </select>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary mb-2 c-create" id="c-create" value="Create"/>

            </form>
        </div>
    </div>

    </div>
{% endblock %}

