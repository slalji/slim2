
{% block head %}
{% include "_base.twig" %}
{% endblock %}

{% block body %}

    {% block contents %}
        {% include "partials/nav.twig" %}
        <div class="container">

            <div class="card-header">
                <span style="color:green"><h1>{{ page_h1 }}</h1></span>
                 <a href="/admin/report/{{ cid }}">Back to Reports</a>
                <p>Report for Search item: {{ item }}
            </div>

        <div class="clear"><p></p></div>
        <div class="form-group row">
            <div class="col-sm-12" >

                <div class="card">
                    <div class="card-body row">
                        <form id="form-search" name="form-search" action="./{{ cid }}/results" method="get">
                            <div class="form-group row">

                                <div class="col-sm-12">
                                    <table border="1">
                                        {%for title in titles%}
                                        <th>{{title}}</th>
                                        {%endfor%}


                                    
                                    {%for items in content %}
                                    <tr>
                                      {%for item in items %} 
                                       <td>{{item}}</td>
                                      {%endfor%} 
                                  </tr>
                                    {%endfor%} 
                                    </table>

                                </div>
                            </div>

                        </form>


                    </div>
                </div>
            </div>
        </div>
        </div>


<style>
    .col-xs-4{
        padding:10px;
        xmargin:10px;
        border-left:1px #ccc solid;
        width:200px;
    }
    th{
        font-weight: bold;
        text-align: center;
        background:#ccc;
        border:2px solid;
    }
    td{
        border:2px solid;
        padding: 5px;
    }
</style>


                            </div>
        </div>
        </div>

    {% endblock %}
{% endblock %}
